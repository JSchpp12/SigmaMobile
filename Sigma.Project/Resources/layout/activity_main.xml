<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:id="@+id/main_layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_row="0"
        android:textAlignment="center"
        android:background="@drawable/statustransition"
        android:id="@+id/connectionStatus"
        android:textStyle="bold|normal"
        android:textSize="20dp"
        android:text="Disconnected"/>
    <LinearLayout
        android:id="@+id/fullContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/connectionStatus">
        <RelativeLayout
            android:id="@+id/ConnectionInfromation_Container"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/connectionReadout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Connected to: Channel 1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="25dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/connectionMeterContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="30dp">
            <ImageView
                android:id="@+id/connectionIndicator_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/connectionmeter_transition"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/connectionIndicator_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/connectionmeter_transition"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/connectionIndicator_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/connectionmeter_transition"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/connectionIndicator_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/connectionmeter_transition"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/connectionIndicator_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/connectionmeter_transition"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/buttonLayout_topButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
                    <Button
                        android:text="1"
                        android:id="@+id/connection_button1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:text="2"
                        android:id="@+id/connection_button2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_bottomButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/buttonLayout_topButtons"
                android:gravity="center_horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
                    <Button
                        android:text="3"
                        android:id="@+id/connection_button3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:text="4"
                        android:id="@+id/connection_button4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>